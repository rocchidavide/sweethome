# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# ----------------------------------------------------------------------------------------------------------------------
# font xft:Noto Sans 10


# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
# ----------------------------------------------------------------------------------------------------------------------
# font pango:DejaVu Sans Mono 10, FontAwesome 10
# font pango:"Shure Tech Mono Nerd Font" 10
# font pango:Blex Mono Text Nerd Font 10
font pango: Hack, Font Awesome 5 Free Regular 10


# Colors
# https://github.com/khamer/base16-i3/tree/master/themes
# ----------------------------------------------------------------------------------------------------------------------
set $base00 #231e18
set $base01 #302b25
set $base02 #48413a
set $base03 #9d8b70
set $base04 #b4a490
set $base05 #cabcb1
set $base06 #d7c8bc
set $base07 #e4d4c8
set $base08 #d35c5c
set $base09 #ca7f32
set $base0A #e0ac16
set $base0B #b7ba53
set $base0C #6eb958
set $base0D #88a4d3
set $base0E #bb90e2
set $base0F #b49368


# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
# ----------------------------------------------------------------------------------------------------------------------
client.focused          $base05 $base04 $base00 $base0D $base04
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07